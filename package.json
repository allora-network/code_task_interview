{
  "name": "coding-task-interview",
  "version": "1.0.0",
  "description": "Coding interview task with Kafka, NextJS, and Postgres",
  "scripts": {
    "db:migrate": "npx sequelize-cli db:migrate",
    "db:migrate:down": "npx sequelize-cli db:migrate:undo",
    "db:migration:create": "npx sequelize-cli migration:generate --name",
    "db:seed": "ts-node scripts/seed-events.ts",
    "consumer": "node backend/consumer/index.js",
    "send:event": "ts-node script/original_event.ts",
    "dev:backend": "cd backend/rest-api && npm run start:dev",
    "dev:frontend": "cd frontend && npm run dev",
    "dev": "npm run dev:backend & npm run dev:frontend",
    "test:task2": "ts-node scripts/test-task2.ts"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "kafkajs": "^2.2.4",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.35.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/pg": "^8.15.5",
    "sequelize-cli": "^6.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
